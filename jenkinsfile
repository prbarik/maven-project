pipeline {
    agent any
    stages {
        stage('scm checkout')
{
            steps {
                git branch: 'test', url: 'https://github.com/prbarik/maven-project.git'
            }
}
        stage('scanner')
        {
            steps {
                script {
                def scannerHome = tool 'sonar-scanner';
                withSonarQubeEnv("Sonar") {
                sh "${tool("sonarqube")}/bin/sonar-scanner \
                -Dsonar.projectKey=My:HygieiaProject \
                -Dsonar.sources=. \
                -Dsonar.host.url=http://http://3.238.240.9:9000 \
                -Dsonar.login=3506734f5c803a69fa82d36368d63696596fde9c"
                }
                }
            }
        }
        stage('Build')
 {
            steps {
                sh script: 'mvn clean package'
 }
 }
        stage('Upload war to Nexus')
 {
            steps {
                nexusArtifactUploader artifacts:[
                    [
                        artifactId: 'maven-project',
                        classifier: '',
                        file: '/var/jenkins_home/workspace/Hygiea-Build-Pipeline/webapp/target/webapp.war',
                        type: 'war'
                    ]
                ],
                credentialsId: 'Nexus',
                groupId: 'com.example.maven-project',
                nexusUrl: '3.238.240.9:9001',
                nexusVersion: 'nexus3',
                protocol: 'http',
                repository: 'hygieia-release',
                version: '1.0.1'
            }
        }
    }
}
